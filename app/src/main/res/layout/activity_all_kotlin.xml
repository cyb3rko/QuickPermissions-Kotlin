<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AllKotlinActivity">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/handleRationale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Handle Rationale?" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/customRationaleMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use custom rationale message?" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/customRationaleMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use custom rationale callback?" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/handlePermanentlyDenied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Handle Permanently Denied?" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/customPermanentlyDeniedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use custom permanently denied message?" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/preRationaleAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Execute pre rationale action (Toast in this case)" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/customPermanentlyDeniedMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use custom permanently denied callback?" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/customDeniedMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attach permissions denied callback?" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:text="Start Permissions Flow"
        android:textColor="#FFFFFF" />

</LinearLayout>
